@using Orchard.Search.ViewModels;

@{
    var searchText = new SearchViewModel();
    if (Model.ViewModel != null) {
        searchText = (SearchViewModel)Model.ViewModel;
    }
}

@using (Html.BeginForm("index", "search", new { area = "Orchard.Search" }, FormMethod.Get, new { @class = "app-bar-menu place-right no-hovered" })) {
    <div class="input-control text" style="margin-right:10px;">
        @Html.TextBox("q", searchText.Query, new { placeholder = "Search" })
        <button type="submit" class="button"><span class="mif-search"></span></button>
    </div>
}